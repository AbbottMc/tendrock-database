{
  "compilerOptions": {
    "lib": ["ES6", "ES2021", "ES2022"],
    "strict": true,
    "target": "es2020",
    "outDir": "lib",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "./scripts"
  ],
  "exclude": ["./rubbish"]
}