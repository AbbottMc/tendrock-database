{
  "compilerOptions": {
    "lib": ["ES6", "ES2021", "ES2022"],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "incremental": false,
    "declarationDir": "types/generated",
    "allowJs": true
  },
  "include": [
    "./scripts"
  ],
  "exclude": ["./rubbish"]
}